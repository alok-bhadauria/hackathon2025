<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Soil Vision — ML + Fullstack</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>

  <body>
    <div class="container">

      <h1>Soil Vision</h1>
      <p class="subtitle">Fast soil-type prediction from surface images</p>

      <div class="card upload-card">
        <h2>Upload soil image</h2>

        <div class="upload-row">
          <input type="file" id="imageInput" accept="image/*" />
          <button onclick="analyzeImage()">Analyze</button>
        </div>

        <img id="previewImg" class="preview-img" style="display:none" />
      </div>

      <div id="resultBox" class="result-box" style="display:none"></div>

      <footer class="footer">
        ML Manthan Hackathon 2025 • Team
      </footer>
    </div>

    <script src="/js/predict.js"></script>

    <script>
      // live preview
      const imgInput = document.getElementById("imageInput");
      const preview = document.getElementById("previewImg");

      imgInput.addEventListener("change", () => {
        const file = imgInput.files[0];
        if (!file) return;

        preview.src = URL.createObjectURL(file);
        preview.style.display = "block";
      });
    </script>
  </body>
</html>
